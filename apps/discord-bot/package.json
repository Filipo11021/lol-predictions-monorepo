{
  "name": "discord-bot",
  "version": "1.0.0",
  "main": "./build/main.js",
  "scripts": {
    "build": "rm -rf ./build && tsc",
    "start": "export NODE_PATH=./build/ && node ./build/deploy-slash-commands.js && node ./build/main.js",
    "dev": "tsx watch --clear-screen=false ./src/main.ts",
    "deploy-cmd": "npm run build && node ./build/deploy-slash-commands.js",
    "db:generate": "prisma generate"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/node": "^20.6.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.1",
    "zod": "^3.22.4"
  }
}

{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^db:gen", "^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"start": {
			"dependsOn": ["^start"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^dev:db:gen"]
		},
		"db:gen": {
			"dependsOn": ["^db:gen"]
		},
		"dev:db:gen": {
			"dependsOn": ["^dev:db:gen"]
		},
		"db:push": {}
	}
}
